<%= form_for @ingredient do |f| %>
   
    <%= f.label :name, "Ingredient Name:" %>
    <%= f.text_field :name %><br>

    <%= f.label :price, "Ingredient Price" %>
    <%= f.number_field :price, in: 1.0..20.0, step: 1.0 %><br>

    <%= f.label :quantity, "Quantity" %>
    <%= f.number_field :quantity, in: 1.0..20.0, step: 1.0 %><br>

    <%= f.submit %>
<% end %>